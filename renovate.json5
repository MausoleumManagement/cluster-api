{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  // https://docs.renovatebot.com/modules/manager/regex/#advanced-capture
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in cluster API provider generation shellscript",
      "fileMatch": ["^generate-cluster-api-providers\\.sh$"],
      // in case you need to change this: https://regex101.com/
      "matchStrings": [
	"^# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))? currentValue=(?<currentValue>.+?)$",
	"^(.+?)_VERSION=(?<currentValue>.+?) # renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?$" 
      ]
    },
    {
      "customType": "regex",
      "fileMatch": ["^generate-cluster-api-providers\\.sh$"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG [A-Z]+_VERSION=\"(?<currentValue>.*)\" # (?<datasource>.*?)/(?<depName>.*?)(\\&versioning=(?<versioning>.*?))?\\s"
      ],
      "datasourceTemplate": "github-releases"
    }

  ]
}
